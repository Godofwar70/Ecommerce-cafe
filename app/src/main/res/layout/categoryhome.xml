<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardMaxElevation="12dp"
        app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="159dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenCategory"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@mipmap/cafefrio"></ImageView>

        <TextView
            android:id="@+id/categoryproducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto">

        </TextView>

        <TextView
            android:id="@+id/categorydescrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion">

        </TextView>

        <TextView
            android:id="@+id/categorydesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="-100dp"
            android:text="Des %10 OFF">

        </TextView>

        <RatingBar
            android:id="@+id/categoryEstrella"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="2dp"></RatingBar>


    </LinearLayout>

</androidx.cardview.widget.CardView>